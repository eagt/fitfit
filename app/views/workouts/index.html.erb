<div class="row">
        <%= render partial: "shared/leftcard" %>
        <%= render partial: "shared/centrecard" %>
        <%= render partial: "shared/rightcard" %>     
</div>

<div class="row">&nbsp;</div>

<div class="card card-outline-success">
  <div class="card-header card-inverse card-success text-center">
    <p id="notice"><%= notice %></p>
    <h1>Workouts</h1>
  </div>

  <div class="card-block">
          <table class="table_app">
            <thead class="thead-inverse">
              <tr>
                  <th>User</th>
                  <th>Name</th>
                  <th>Date</th>
                  <th>Lifted weight</th>
                  <th>Weight unit</th>
                  <th>Repetitions</th>
                  <th colspan="3">Actions</th> 
              </tr>
            </thead>

            <tbody class="tbody_app">
              <% @user.workouts.each do |workout| %>
                <tr>
                  <td><%= workout.user_id %></td>
                  <td><%= workout.name %></td>
                  <td><%= workout.date %></td>
                  <td><%= workout.lifted_weight %></td>
                  <td><%= workout.weight_unit %></td>
                  <td><%= workout.repetitions %></td>
                  <td><%= link_to show_tag, user_workout_path(@user, workout)%></td>
                  <td><%= link_to edit_tag, edit_user_workout_path(@user, workout) %></td>
                  <td><%= link_to destroy_tag, [@user, workout], method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        <%= link_to 'Back', @user %>

          <div class="card-footer card-inverse card-success">
            <%= link_to(new_user_workout_path, :class=>"card-inverse") do %>
            <%= icon('file-text-o','New Workout', class: 'fa-2x') %> 
            <% end %> 
          </div>  
  </div>
</div>






