<div class="row">
        <%#= render partial: "shared/leftcard" %>
        <%= render partial: "shared/centrecard" %>
        <%= render partial: "shared/rightcard" %>     
</div>
<div class="row">&nbsp;</div>

<div class="card card-outline-success">
  <div class="card-header card-inverse card-success text-center">
    <p id="notice"><%= notice %></p>
    <h1>Muscles</h1>
  </div>

 <div class="card-block">
    <table class="table table-responsive table-striped">
      <thead class="thead-inverse">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.muscles.each do |muscle| %>
      <tr>
        <td><%= muscle.name %></td>
        <td><%= link_to 'Show', user_muscle_path(@user, muscle)%></td>
        <td><%= link_to 'Edit', edit_user_muscle_path(@user, muscle) %></td>
        <td><%= link_to 'Destroy', [@user, etype], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="card-footer card-inverse card-success">
    <%= link_to(new_user_muscle_path, :class=>"card-inverse") do %>
    <%= icon('file-text-o','New Muscle', class: 'fa-2x') %> 
    <% end %> 
</div> 
