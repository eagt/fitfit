<div class="row">
        <%= render partial: "shared/leftcard" %>
        <%= render partial: "shared/centrecard" %>
        <%= render partial: "shared/rightcard" %>     
</div>

<div class="row">&nbsp;</div>

<div class="card card-outline-success">
    <div class="card-header card-inverse card-success text-center">
      <p id="notice"><%= notice %></p>
      <%= link_to new_tag, new_user_muscle_path, :class=>"card-inverse pull-left" %>
      <h1>Muscles</h1>
    </div>
       <div class="card-block">
          <table class="table table-responsive table-striped">
            <thead class="thead-inverse">
                <tr>
                  <th>Name</th>
                  <th colspan="3">Actions</th> 
                </tr>
            </thead>
            <tbody>
              <% @user.muscles.each do |muscle| %>
                <tr>
                  <td><%= muscle.name %></td>
                  <td><%= link_to show_tag, user_muscle_path(@user, muscle)%></td>
                  <td><%= link_to edit_tag, edit_user_muscle_path(@user, muscle) %></td>
                  <td><%= link_to destroy_tag, [@user, muscle], method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
       <br>
       
        <div class="card-footer card-inverse card-success">
              <%= link_to back_tag, @user %>
          </div> 
       </div>
</div>

