<div class="row">
        <%= render partial: "shared/leftcard" %>
        <%= render partial: "shared/centrecard" %>
        <%= render partial: "shared/rightcard" %>     
</div>


<div class="row">&nbsp;</div>

<div class="card card-outline-success">
     <div class="card-header card-inverse card-success text-center">
       <p id="notice"><%= notice %></p>
       <%= link_to new_tag, new_user_measurement_path, :class=>"card-inverse pull-left" %>
        <h1>Measurements</h1>
     </div>
         <div class="card-block">
            <table class="table table-responsive table-striped">
              <thead class="thead-inverse">
                  <tr>
                    <th>User</th>
                    <th>Date</th>
                    <th>Weight</th>
                    <th>Weight unit</th>
                    <th>Fat pct</th>
                    <th colspan="3">Actions</th> 
                  </tr>
              </thead>

              <tbody class="inshtaex">  
                  <% @user.measurements.each do |measurement| %>
                    <tr>
                      <td><%= measurement.user_id %></td>
                      <td><%= measurement.date %></td>
                      <td><%= measurement.weight %></td>
                      <td><%= measurement.weight_unit %></td>
                      <td><%= measurement.fat_pct %></td>
                      <td><%= link_to show_tag, user_measurement_path(@user, measurement) %></td>
                      <td><%= link_to edit_tag,edit_user_measurement_path(@user, measurement) %></td>
                      <td><%= link_to destroy_tag, [@user, measurement], confirm: 'Are you sure?', method: :delete %></td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
            
         <br>
         
            <div class="card-footer card-inverse card-success">
                 <%= link_to back_tag, @user %> 
            </div> 
         </div>
</div>

