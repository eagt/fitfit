<div class="row">
        <%= render partial: "shared/leftcard" %>
        <%= render partial: "shared/centrecard" %>
        <%= render partial: "shared/rightcard" %>     
</div>

<div class="row">&nbsp;</div>

<div class="card card-outline-success">
  <div class="card-header card-inverse card-success text-center">
    <p id="notice"><%= notice %></p>
    <h1>Equipment</h1>
  </div>

 <div class="card-block">
    <table class="table table-responsive table-striped">
      <thead class="thead-inverse">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="inshtaex">
    <% @user.equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.name %></td>
        <td><%= link_to 'Show', user_equipment_path(@user, equipment) %></td>
        <td><%= link_to 'Edit', edit_user_equipment_path(@user, equipment) %></td>
        <td><%= link_to 'Destroy', [@user, equipment], confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="card-footer card-inverse card-success">
    <%= link_to(new_user_equipment_path, :class=>"card-inverse") do %>
    <%= icon('file-text-o','New Equipment', class: 'fa-2x') %> 
    <% end %> 
</div>  
