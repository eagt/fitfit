<div class="row">
        <%= render partial: "shared/leftcard" %>
        <%= render partial: "shared/centrecard" %>
        <%= render partial: "shared/rightcard" %>     
</div>

<div class="row">&nbsp;</div>

<div class="card card-outline-success">
  <div class="card-header card-inverse card-success text-center">
    <p id="notice"><%= notice %></p>    
    <%= link_to new_tag, new_user_exercise_path, :class=>"card-inverse pull-left", title: 'Add New Exercise', 'data-toggle' => 'tooltip', 'data-placement' => 'top'%>
    <h1>Exercises</h1>
   
  </div>

        <div class="card-block">
          <table class="table_app">
            <thead class="thead-inverse">
              <tr>
                  <th>Type</th>
                  <th>Name</th>
                  <th>Muscle</th>
                  <th>Equipment</th>
                  <th>Description</th>
                  <th colspan="3">Actions</th>                  
              </tr>
            </thead>

            <tbody class="tbody_app">
              <% @user.exercises.each do |exercise| %>
                <tr>
                  <td><%= exercise.etypes.size == 0 ? " " : exercise.etypes.size > 1 ? exercise.etypes.first.name + "" + " (+#{exercise.etypes.size - 1})" : exercise.etypes.first.name %></td>
                  <td><%= exercise.name %></td> 
                  <td><%= exercise.muscles.size == 0 ? " " : exercise.muscles.size > 1 ? exercise.muscles.first.name + "" + " (+#{exercise.muscles.size - 1})" : exercise.muscles.first.name %></td>
                  <td><%= exercise.equipment.size == 0 ? " " : exercise.equipment.size > 1 ? exercise.equipmentfirst.name + "" + " (+#{exercise.equipment.size - 1})" : exercise.equipment.first.name %></td>
                  <td><%= exercise.description %></td> 
                  <td><%= link_to show_tag, user_exercise_path(@user, exercise), title: 'View Exercise', 'data-toggle' => 'tooltip', 'data-placement' => 'top' %></td>
                  <td><%= link_to edit_tag, edit_user_exercise_path(@user, exercise), title: 'Edit Exercise', 'data-toggle' => 'tooltip', 'data-placement' => 'top' %></td>
                  <td><%= link_to destroy_tag, [@user, exercise], title: 'Delete Exercise', 'data-toggle' => 'tooltip', 'data-placement' => 'top', confirm: 'Are you sure?', method: :delete %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <div class="card-footer card-inverse card-success">
             <%#= link_to back_tag, @user %>
             <%= link_to back_tag, @user,  title: 'Back to User', 'data-toggle' => 'tooltip', 'data-placement' => 'top' %>
          </div>  
          








        </div>
</div>
