<p id="notice"><%= notice %></p>

<h1>Exercises</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Muscle</th>
      <th>Equipment</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.etypes.size > 1 ? exercise.etypes.first.name + "" + " (+#{exercise.etypes.size - 1})" : exercise.etypes.first.name %></td>
        <td><%= exercise.name %></td> 
        <td><%= exercise.muscles.size > 1 ? exercise.muscles.first.name + "" + "" + " (+)#{exercise.muscles.size - 1}" : exercise.muscles.first.name %></td>
        <td><%= exercise.equipment.size > 1 ? exercise.equipment.first.name + "" + "" + " (+)#{exercise.equipment.size - 1}" : exercise.equipment.first.name %></td>
        <td><%= exercise.description %></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exercise', new_exercise_path %>
