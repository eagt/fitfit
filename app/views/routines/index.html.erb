<div class="row">
        <%= render partial: "shared/leftcard" %>
        <%= render partial: "shared/centrecard" %>
        <%= render partial: "shared/rightcard" %>     
</div>

<div class="row">&nbsp;</div>

<div class="card card-outline-success">
  <div class="card-header card-inverse card-success text-center">
    <p id="notice"><%= notice %></p>
     <%= link_to new_tag, new_user_routine_path, :class=>"card-inverse pull-left" %>
    <h1>Routines</h1>
  </div>

  <div class="card-block">
          <table class="table_app">
            <thead class="thead-inverse">
              <tr>
                <th>User</th>
                <th>Name</th>
                <th>Date</th>
                <th>Weekly frequency</th>
                <th>Days</th>
                <th colspan="3">Actions</th> 
              </tr>
            </thead>

            <tbody class="tbody_app">
              <% @user.routines.each do |routine| %>
                <tr>
                    <td><%= routine.user_id %></td>
                    <td><%= routine.name %></td>
                    <td><%= routine.date %></td>
                    <td><%= routine.weekly_frequency %></td>
                    <td><%= routine.days %></td>
                    <td><%= link_to show_tag, user_routine_path(@user, routine) %></td>
                    <td><%= link_to edit_tag, edit_user_routine_path(@user, routine) %></td>
                    <td><%= link_to destroy_tag, [@user, routine], confirm: 'Are you sure?', method: :delete %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

         <br>

          <div class="card-footer card-inverse card-success">
             <<%= link_to back_tag, @user %>
          </div>  
  </div>
</div>


