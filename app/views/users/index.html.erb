<div class="row">&nbsp;</div>

<div class="card card-outline-success">
  <div class="card-header card-inverse card-success text-center">
    <p id="notice"><%= notice %></p>
    <h1>Users</h1>
  </div>

   <div class="card-block">
    <table class="table table-responsive table-striped">
      <thead class="thead-inverse">
        <tr>
          <th>Name</th>
          <th>Surname</th>
          <th>Email</th>
          <th>Password</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="inshtaex">
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.surname %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
            <td><%= link_to 'Show', user %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<br>

  <div class="card-footer card-inverse card-success">
    <%= link_to(new_user_path, :class=>"card-inverse") do %>
      <%= icon('file-text-o','New User', class: 'fa-2x') %> 
      <% end %> 
  </div>  
